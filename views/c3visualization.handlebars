<div id="chart"></div>


<div id="loading"></div>

<script> 
function onReady(callback) {
    var intervalID = window.setInterval(checkReady,30);

    function checkReady() {
        if (document.getElementById('chart') !== undefined) {
            window.clearInterval(intervalID);
            callback.call(this);
        }
    }
}

function show(id, value) {
    document.getElementById(id).style.display = value ? 'block' : 'none';
    debugger
}

onReady(function () { 
    show('chart', true);
    show('loading', false);
});</script>

